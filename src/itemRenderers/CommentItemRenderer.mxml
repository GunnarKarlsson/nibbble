<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
	</fx:Declarations>
	
	<s:Path x="30" y="80" data = "	
			M 0 0
			L 20 20
			L 0 20
			L 0 0 ">		
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x999999"/>
				<s:GradientEntry color="0x999999"/>
			</s:LinearGradient>
		</s:fill>
		
	</s:Path>
	
	<s:BitmapImage id="avatarImage" 
				   x="30" y="30"
				   width="50" height="50" 
				   source="{data.player.avatarImage}" />
	
	<s:TextArea 	id="textArea" x="75" y="30" fontSize="16" width="100%" height ="60" borderVisible="false" 
					text="{data.player.username}, {data.createdAt}"
					editable="false" selectable="false" contentBackgroundAlpha="0" />
	
	<s:SkinnableContainer x="20" y="100" width="95%" skinClass="skins.CustomTextAreaSkin">
		<s:TextArea id="bodyTextArea" x="0" y="0" width="95%" text="{data.body}"  
						color="#ffffff" borderVisible="false" editable="false" alpha="1" contentBackgroundAlpha="0"/>
	</s:SkinnableContainer>
</s:ItemRenderer>