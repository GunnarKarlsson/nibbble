<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="400" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:BitmapImage id="avatarImage" 
				   x="30" y="0"
				   width="50" height="50" 
				   source="{data.player.avatarImage}" />
	
	<s:TextArea 	x="75" y="0" fontSize="16" width="100%" height ="60" borderVisible="false" 
					text="{data.player.username} commented on {data.title} by {data.commentedPlayer}"/>
	
	<s:TextArea x="20" y="80" width="100%" text="{data.body}" borderVisible="false" editable="false"/>
	
	<s:Label x="10" y="120" fontSize="16" text="{data.createdAt}"/>
</s:ItemRenderer>
