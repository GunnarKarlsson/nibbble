<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" width="480" height="100">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:DropShadowFilter id="dropShadowFilter"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			import valueObjects.PlayerVO;
			
			import views.*;
			
			[Bindable]
			public var username:String;
			
			[Bindable]
			public var imageSource:Bitmap;
			
			[Bindable]
			public var playerVO:PlayerVO;
			
			private function onFollowingClick(event:MouseEvent):void{
				playerVO.setViewType(PlayerVO.FOLLOWING);
				trace("playerVO.getViewType: "+playerVO.getViewType());
				FlexGlobals.topLevelApplication.viewNavigator.pushView(views.MultiplePlayerAvatarsView,playerVO);
			}
			
			private function onFollowersClick(event:MouseEvent):void{
				playerVO.setViewType(PlayerVO.FOLLOWERS);
				trace("playerVO.getViewType: "+playerVO.getViewType());
				FlexGlobals.topLevelApplication.viewNavigator.pushView(views.MultiplePlayerAvatarsView,playerVO);
			}
			
			private function onLikesClick(event:MouseEvent):void{
				playerVO.setViewType(PlayerVO.LIKES);
				trace("playerVO.getViewType: "+playerVO.getViewType());
				FlexGlobals.topLevelApplication.viewNavigator.pushView(views.MultiplePlayerAvatarsView,playerVO);
			}
			
		]]>
	</fx:Script>
<s:SkinnableContainer width="100%" height="100%" filters="{[dropShadowFilter]}">
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#dddddd"/>
				<s:GradientEntry color="#bbbbbb"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:HGroup x="10" y="10" width="460" height="131">
		
		<s:Image horizontalAlign="center" source="{imageSource}" verticalAlign="middle"/>
		
		<s:VGroup>
		
			<s:HGroup>
				<s:Label text="{username}" verticalAlign="middle" fontSize="14"/>
			</s:HGroup>
			
			<s:HGroup width="173" height="104">
				<s:Button width="80" height="50" label="Likes" click="onLikesClick(event)" fontSize="12"/>
				<s:Button width="100" height="50" label="followers" click="onFollowersClick(event)"
						  fontSize="12"/>
				<s:Button width="100" height="50" label="following" click="onFollowingClick(event)"
						  fontSize="12"/>	
			</s:HGroup>
	
		</s:VGroup>

	</s:HGroup>

</s:SkinnableContainer>
	
</s:SkinnableContainer>
