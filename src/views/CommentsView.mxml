<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="CommentView"
		viewActivate="init()"
		tabBarVisible="false" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<s:HTTPService id="service" url="{_url}" method="GET" resultFormat="text"
					   result="serviceResultHandler(event)" request="{_serviceRequestParams}"/>
		
		<s:DropShadowFilter id="dropShadowText" distance="2" angle="90" blurX="1" blurY="1" alpha="1" color="0xffffff" />
		
	</fx:Declarations>
	
	<s:navigationContent>
		<s:Button icon="@Embed(source='assets/icons/nibbbleLogo.png')" />
	</s:navigationContent>
	
	<s:actionContent>
		<s:Button icon="@Embed(source='assets/icons/Dribble-Client-Menu-Icon.png')" click="navigator.pushView(MenuView)"/>
	</s:actionContent>	
	
	<fx:Script>
		<![CDATA[
			import com.adobe.serialization.json.JSON;
			
			import helpers.CommentVOArrrayCollectionPopulator;
			
			import mx.collections.ArrayCollection;
			import mx.core.FlexGlobals;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			private var _serviceRequestParams:Object;
			
			[Bindable]
			private var _url:String;
			
			[Bindable]
			private var _commentVOs:ArrayCollection = new ArrayCollection();
			
			private var _numCommentsPerPage:int;
			private var _pageNumber:int = 1;
			private var _numPages:int;
			private var _perPage:int = 15;
			
			[Bindable]
			private var _screenWidth:int = FlexGlobals.topLevelApplication.stage.stageWidth
			
			private function init():void{
				trace("cv data.id: "+data.id);
				_serviceRequestParams = new Object();
				_serviceRequestParams.per_page = _perPage;
				_serviceRequestParams.page = _pageNumber;
				_url = "http://api.dribbble.com/shots/"+data.id+"/comments";
				service.send();
			}
			
			private function serviceResultHandler(event:ResultEvent):void{
				_commentVOs.removeAll();
				var obj:Object = JSON.decode(service.lastResult.toString());
				
				_numPages = obj.pages;
				
				_commentVOs = CommentVOArrrayCollectionPopulator.execute(obj);	
				for(var i:int = 0; i < _commentVOs.length;i++){
					_commentVOs[i].shotImage = data.teaserImage;
					_commentVOs[i].title = data.title;
					_commentVOs[i].commentedPlayer = data.player.username;
					_commentVOs[i].filter = dropShadowText;
				}
			}
			
			private function onClickOlder():void{
				if(_pageNumber<_numPages)_pageNumber++;
				trace("_pageNumber:" +_pageNumber);
				_serviceRequestParams.page = _pageNumber;
				_url = "http://api.dribbble.com/shots/"+data.id+"/comments";
				service.send();
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" paddingLeft="10" paddingRight="10"/>
	</s:layout>
	
	<s:SkinnableContainer skinClass="skins.CommentsHeaderSkin" width="{_screenWidth}">
		
	<s:HGroup paddingBottom="10" paddingLeft="0" paddingRight="0" paddingTop="10" width="90%">
	
		<s:Image source ="{data.teaserImage}" scaleX="0.5" scaleY="0.5" left="10"/>
		<s:TextArea text="comments on..{data.title} by {data.player.username}" 
					width="90%"
					paddingTop="15" paddingLeft="10" paddingBottom="10" paddingRight="10"
					selectable="false" editable="false" contentBackgroundAlpha="0"
					borderVisible="false"
					color="#444444"
					fontSize="16"/>
	</s:HGroup>
		
	</s:SkinnableContainer>
	
	<s:List id="listDisplay" contentBackgroundAlpha="0"
			itemRenderer="itemRenderers.CommentItemRenderer" width="100%" height="100%" dataProvider="{_commentVOs}">
	</s:List>
	
</s:View>
