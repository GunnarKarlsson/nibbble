	<fx:Script>
		<![CDATA[
			import adobe.utils.CustomActions;
			
			import components.AlertPopUp;
			
			import eventSystem.EventCentral;
			import eventSystem.events.CustomEvent;
			
			import flash.sensors.Accelerometer;
			
			import mx.core.FlexGlobals;
