<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.SkinnableContainer")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="disabled"/>
		<s:State name="normal"/>
	</s:states>

	<s:Path data="M 200 0
			L 230 40
			L 200 40 
			L 200 0">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#aaaaaa"/>
				<s:GradientEntry color="#aaaaaa"/>
			</s:LinearGradient>
		</s:fill>
	</s:Path>

	<s:Rect id="rect"
			x="0"
			y="40"
			width="100%"
			height="100%"
			visible="true">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#aaaaaa"/>
				<s:GradientEntry color="#aaaaaa"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:Rect id="topRect"
			x="0"
			y="120"
			width="100%"
			height="100%"
			visible="true">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#bbbbbb"/>
				<s:GradientEntry color="#cccccc"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:Group id="contentGroup"
			 horizontalCenter="0"
			 top="50">
	</s:Group>

</s:Skin>
