<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:styles="styles.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.SkinnableContainer")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter"/>
		<styles:GraphicElementsLibrary id="graphicsLib"/>
	</fx:Declarations>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:Path filters="{[graphicsLib.getDropShadowFilter()]}"
		data="M 0 0
		L 100 0
		L 100 100 
		L 20 100
		L 0 120
		L 0 0
		" >
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#ffffff"/>
				<s:GradientEntry color="#eeeeee"/>
			</s:LinearGradient>
		</s:fill>
	</s:Path>
	
	<s:Group id="contentGroup" left="10" right="10"/>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	-->
</s:Skin>
